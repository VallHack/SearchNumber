<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Группа элементов в левом верхнем углу -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start">

        <!-- Отображение числа попыток -->
        <TextView
            android:id="@+id/attemptsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Осталось попыток: 3"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <!-- Отображение диапазона -->
        <TextView
            android:id="@+id/rangeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Диапазон: 1 - 100"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <!-- Отображение числа, которое нужно угадать -->
        <TextView
            android:id="@+id/targetNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Число для угадывания: ?"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <!-- Основной контент приложения -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Угадай число от 1 до 100"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/guessInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Введите число"
        android:inputType="number"
        android:layout_marginBottom="16dp"
        android:width="200dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Проверить" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

</LinearLayout>
